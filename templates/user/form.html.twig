{% extends 'base.html.twig' %}

{% block body %}
    {% form_theme form with [
        'address/form.html.twig'
    ] %}

    <div class="content">
        <div class="ui mini container">
            <div class="logo">
                <img src="{{ asset('images/logo.png') }}">
                <h2>
                    Rejoins-nous vite
                </h2>
            </div>

            {{ form_start(form, {'attr' : {'class' : 'ui form'}}) }}
            {% if errors is defined %}
                {{ form_errors(form) }}
            {% endif %}
                <div class=" field">
                    <div class="three fields">
                        <div class="field">
                            <label>Prénom</label>
                            {{ form_widget(form.firstname) }}
                        </div>
                        <div class="field">
                            <label>Nom</label>
                            {{ form_widget(form.lastname) }}
                        </div>
                        <div class="field">
                            <label>Pseudo</label>
                            {{ form_widget(form.username) }}
                        </div>
                    </div>
                </div>
                <div class=" field">
                    <div class="two fields">
                        <div class="field">
                            <label>Adresse Email</label>
                            {{ form_widget(form.email) }}
                        </div>
                        <div class="field">
                            <label>Numéro de téléphone</label>
                            {{ form_widget(form.phone) }}
                        </div>
                    </div>
                </div>
                {{ form_row(form.address) }}
            {{ form_end(form) }}
            <a href="{{ path('app_login_logout') }}" class="ui fluid button ">Peut-être plus tard</a>
        </div>
    </div>
{% endblock %}
